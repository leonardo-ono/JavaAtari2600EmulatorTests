{
  "name": "java-atari2600-debugger",
  "displayName": "Java Atari 2600 Debugger",
  "publisher": "meu-nome",
  "version": "0.0.1",
  "categories": ["Debuggers"],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.80.0"
  },
  "contributes": {
    "breakpoints": [
      { "language": "dasm" },
      { "language": "textfile" }
    ],
    "debuggers": [
      {
        "type": "java-atari2600-debugger",
        "label": "My Debugger",
        "runtime": "node",
        "languages": ["dasm"],
        "configurationAttributes": {
            "launch": {
                "properties": {
                    "program": {
                        "type": "string",
                        "description": "Path to bin/ROM"
                    }
                },
                "required": ["program"]
            }
        },
        "initialConfigurations": [
            {
                "name": "Launch Atari 2600 ROM",
                "type": "atari2600",
                "request": "launch",
                "program": "${workspaceFolder}/roms/game.bin"
            }
        ]        
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0",
    "vscode": "^1.1.37"
  }
}
